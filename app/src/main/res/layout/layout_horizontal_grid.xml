<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Item 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_farma"
                android:background="@drawable/bg_circle"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokopedia\nFarma"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_keuangan"
                android:background="@drawable/bg_circle"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keuangan"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_tiket_hiburan"
                android:background="@drawable/bg_circle"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiket \nHiburan"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_tokopedia_seru"
                android:background="@drawable/bg_circle"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokopedia\nSeru"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>
        <!-- Item 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_lihat_semua"
                android:background="@drawable/bg_circle"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Add other items here -->
    </LinearLayout>
</HorizontalScrollView>